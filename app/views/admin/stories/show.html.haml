#story
  #show
    - title "Story"

    %p
      = image_tag(@story.picture.url, :border => "0")
    %p
      %strong Name:
      =h @story.name
    %p
      %strong Copy:
      =h @story.copy
    %p
      %strong Active:
      =h @story.active

    %p
      = link_to "Edit", edit_admin_story_path(@story)
      |
      = link_to "Destroy", [:admin, @story], :confirm => 'Are you sure?', :method => :delete
      |
      = link_to "View All", admin_stories_path
