- form_for [:admin, @status] do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :message
    \- Characters Left: 
    %span#chars_left
      = (144- @status.message.length) unless @status.new_record?
    %br
    = f.text_area :message
  %p
    = f.check_box :active
    = f.label :active

  %p
    = f.submit "Submit"
